<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:background="@color/background"
        android:id="@+id/tv_notification_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_83"
        android:gravity="center"
        android:text="1993-09-23"
        android:textColor="#999999"
        android:textSize="@dimen/dimen_24" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_220"
        android:layout_below="@+id/tv_notification_time"
        android:background="#ffffff">

        <TextView
            android:id="@+id/item_notification_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_20"
            android:text="最新揭晓"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_28" />

        <ImageView
            android:id="@+id/iv_notification_all_img"
            android:layout_width="@dimen/dimen_120"
            android:layout_height="@dimen/dimen_120"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_80"
            android:background="@drawable/default_icon" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dimen_11"
            android:layout_height="@dimen/dimen_22"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_23"
            android:layout_marginTop="@dimen/dimen_99"
            android:background="@drawable/go_go" />

        <TextView
            android:id="@+id/tv_notification_all_discribe"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_104"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_34"
            android:layout_marginTop="@dimen/dimen_87"
            android:layout_toLeftOf="@+id/iv"
            android:layout_toRightOf="@+id/iv_notification_all_img"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="你参与的第2314期Apple iPhone 7 Unlocked Phone 128 GB - GSM Version (Black)即将揭晓，点击查看详情。"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_28" />

    </RelativeLayout>

</RelativeLayout>