<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_delivered"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_dispatch_show"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_36"
            android:gravity="center_horizontal"
            android:text="@string/Show"
            android:textColor="#cccccc"
            android:textSize="@dimen/dimen_28" />

        <TextView
            android:layout_marginTop="@dimen/dimen_3"
            android:layout_marginBottom="@dimen/dimen_28"
            android:id="@+id/tv_dispatch_5coins"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_36"
            android:layout_below="@+id/tv_dispatch_show"
            android:textColor="#cccccc"
            android:text="123"
            android:textSize="@dimen/dimen_22" />
    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/tv_dispatch_isshow"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_60"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/rl_show"
        android:layout_marginEnd="@dimen/dimen_24"
        android:background="@drawable/shape_rectangle_orange"
        android:paddingEnd="@dimen/dimen_35"
        android:paddingStart="@dimen/dimen_35"
        android:text="@string/Show"
        android:textColor="#ffffff"
        android:textSize="@dimen/dimen_30" />
</RelativeLayout>


