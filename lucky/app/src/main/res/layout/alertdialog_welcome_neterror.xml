<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/rounded_corners_background"
    android:orientation="vertical">



    <TextView
        android:layout_gravity="center"
        android:id="@+id/jtv_insertcoins_lessicons_discribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_44"
        android:layout_marginRight="@dimen/dimen_44"
        android:gravity="center"
        android:layout_marginEnd="@dimen/dimen_44"
        android:layout_marginTop="@dimen/dimen_30"
        android:text="@string/Networkfailure"
        android:textColor="#999999"
        android:textSize="@dimen/dimen_30" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dimen_30"
        android:background="#d8d8d8"></View>


    <TextView
        android:id="@+id/tv_welcome_done"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_75"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dimen_25"
        android:gravity="center"
        android:text="@string/Done"
        android:textColor="#ff9c06"
        android:textSize="@dimen/dimen_34" />
</LinearLayout>