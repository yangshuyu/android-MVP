<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_gift"
        android:layout_width="@dimen/dimen_660"
        android:layout_height="@dimen/dimen_711"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/home_gift_use" />

    <ImageView
        android:id="@+id/iv_home_usegift"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_width="@dimen/dimen_660"
        android:layout_height="@dimen/dimen_711"
        android:background="@drawable/home_gift_coins_en" />

    <ImageView
        android:layout_alignLeft="@+id/iv_gift"
        android:id="@+id/iv_home_coin"
        android:layout_width="@dimen/dimen_45"
        android:layout_height="@dimen/dimen_69"
        android:layout_marginLeft="@dimen/dimen_190"
        android:layout_marginTop="@dimen/dimen_263"
        android:background="@drawable/home_gift_two" />

    <ImageView
        android:id="@+id/iv_home_use"
        android:layout_width="@dimen/dimen_360"
        android:layout_height="@dimen/dimen_80"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_660" />

    <ImageView
        android:layout_marginTop="@dimen/dimen_20"
        android:id="@+id/iv_gift__use_close"
        android:layout_width="@dimen/dimen_52"
        android:layout_height="@dimen/dimen_52"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_30" />

</RelativeLayout>