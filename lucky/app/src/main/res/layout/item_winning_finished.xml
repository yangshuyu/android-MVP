<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_winning_icon"
        android:layout_width="@dimen/dimen_260"
        android:layout_height="@dimen/dimen_260"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_27"
        android:background="@drawable/default_icon" />

    <TextView
        android:id="@+id/tv_winning_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_winning_icon"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginRight="@dimen/dimen_20"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Magic sound headphones second generation of ..."
        android:textColor="#333333"
        android:textSize="@dimen/dimen_28" />

    <TextView
        android:id="@+id/item_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_winning_title"
        android:layout_marginStart="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_28"
        android:text="@string/Issue."
        android:textColor="#999999"
        android:textSize="@dimen/dimen_24" />

    <TextView
        android:id="@+id/item_winning_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_winning_title"
        android:layout_marginTop="@dimen/dimen_28"
        android:layout_toEndOf="@id/item_issue"
        android:text="10020"
        android:textColor="#999999"
        android:textSize="@dimen/dimen_24" />
    <TextView
        android:id="@+id/tv_winning_winning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_issue"
        android:layout_marginStart="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_7"
        android:text="@string/Winner."
        android:textColor="#999999"
        android:textSize="@dimen/dimen_22" />

    <TextView
        android:id="@+id/tv_winning_winningname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_issue"
        android:layout_marginTop="@dimen/dimen_7"
        android:layout_toEndOf="@id/tv_winning_winning"
        android:text="yangshuyu"
        android:textColor="#999999"
        android:textSize="@dimen/dimen_22"/>



    <TextView
        android:id="@+id/tv_winning_lucky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_winning_winning"
        android:layout_marginStart="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_7"
        android:text="@string/Luckynumber."
        android:textColor="#999999"
        android:textSize="@dimen/dimen_22" />

    <TextView
        android:id="@+id/tv_winning_luckynum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_winning_winning"
        android:layout_marginTop="@dimen/dimen_7"
        android:layout_toEndOf="@id/tv_winning_lucky"
        android:text="10987390"
        android:textColor="#999999"
        android:textSize="@dimen/dimen_22"/>



    <TextView
        android:id="@+id/tv_winning_announc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_winning_lucky"
        android:layout_marginStart="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_7"
        android:text="@string/Lotterytime."
        android:textColor="#999999"
        android:textSize="@dimen/dimen_22" />

    <TextView
        android:id="@+id/tv_winning_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_7"
        android:layout_toEndOf="@id/tv_winning_announc"
        android:layout_below="@+id/tv_winning_lucky"
        android:text="yangshuyu"
        android:textColor="#999999"
        android:layout_marginBottom="@dimen/dimen_40"
        android:textSize="@dimen/dimen_22"/>
</RelativeLayout>
