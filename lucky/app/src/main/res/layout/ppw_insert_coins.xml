<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_productdetail_ppw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_while">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_44"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_26"
        android:text="@string/selectquantity"
        android:textColor="@color/text_black"
        android:textSize="@dimen/dimen_32" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="@dimen/dimen_24"
        android:layout_marginStart="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_100"
        android:background="#d8d8d8"></View>

    <RelativeLayout
        android:id="@+id/rl_insert_num"
        android:layout_width="@dimen/dimen_350"
        android:layout_height="@dimen/dimen_88"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_150"
        android:background="#f6f6f7">

        <EditText
            android:id="@+id/et_insert_count"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_centerInParent="true"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_36"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_insert_delete"
        android:layout_width="@dimen/dimen_88"
        android:layout_height="@dimen/dimen_88"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_150"
        android:layout_toStartOf="@+id/rl_insert_num"
        android:background="#f6f6f7">

        <ImageView
            android:layout_width="@dimen/dimen_36"
            android:layout_height="@dimen/dimen_4"
            android:layout_centerInParent="true"
            android:background="@drawable/icons_delete" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_insert_add"
        android:layout_width="@dimen/dimen_88"
        android:layout_height="@dimen/dimen_88"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_150"
        android:layout_toEndOf="@+id/rl_insert_num"
        android:background="#f6f6f7">

        <ImageView
            android:layout_width="@dimen/dimen_36"
            android:layout_height="@dimen/dimen_36"
            android:layout_centerInParent="true"
            android:background="@drawable/icons_add" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_insert_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_insert_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_25">

        <ImageView
            android:id="@+id/iv_insert_warn"
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_25"
            android:layout_marginEnd="@dimen/dimen_6"
            android:layout_marginTop="@dimen/dimen_4"
            android:background="@drawable/default_warn"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_insert_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_insert_warn"
            android:enabled="false"
            android:text="@string/FiveTimes"
            android:textColor="@drawable/selector_ff0000_999999"
            android:textSize="@dimen/dimen_23" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_insert_selector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_64"
        android:layout_alignEnd="@id/rl_insert_add"
        android:layout_alignStart="@+id/rl_insert_delete"
        android:layout_below="@+id/rl_insert_warn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_insert_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/selector_tv_insert"
            android:gravity="center"
            android:text="2"
            android:textColor="@drawable/selector_tc_insert_textcolor"
            android:textSize="@dimen/dimen_28" />

        <TextView
            android:id="@+id/tv_insert_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_weight="3"
            android:background="@drawable/selector_tv_insert"
            android:gravity="center"
            android:text="5"
            android:textColor="@drawable/selector_tc_insert_textcolor"
            android:textSize="@dimen/dimen_28" />

        <TextView
            android:id="@+id/tv_insert_ten"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_weight="3"
            android:background="@drawable/selector_tv_insert"
            android:gravity="center"
            android:text="10"
            android:textColor="@drawable/selector_tc_insert_textcolor"
            android:textSize="@dimen/dimen_28" />

        <TextView
            android:id="@+id/tv_insert_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_weight="4"
            android:background="@drawable/selector_tv_insert"
            android:gravity="center"
            android:text="@string/allremain"
            android:textColor="@drawable/selector_tc_insert_textcolor"
            android:textSize="@dimen/dimen_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_insert_buy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100"
        android:layout_below="@+id/ll_insert_selector"
        android:layout_marginBottom="@dimen/dimen_54"
        android:layout_marginEnd="@dimen/dimen_24"
        android:layout_marginStart="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_50"
        android:background="@color/all_orange"
        android:gravity="center"
        android:text="Total 108 coins"
        android:textColor="@color/text_white"
        android:textSize="@dimen/dimen_32" />

    <ProgressBar
        android:id="@+id/pb_insert"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_alignTop="@+id/tv_insert_buy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_30"
        android:visibility="gone" />

</RelativeLayout>