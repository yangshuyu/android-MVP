<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:background="@color/background"
        android:id="@+id/tv_notification_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_83"
        android:gravity="center"
        android:text="1993-09-23"
        android:textColor="#999999"
        android:textSize="@dimen/dimen_24" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_notification_time">

        <TextView
            android:id="@+id/item_notification_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_20"
            android:text="最新揭晓"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_28" />

        <TextView
            android:id="@+id/tv_notification_noimg_discribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginRight="@dimen/dimen_64"
            android:layout_marginTop="@dimen/dimen_77"
            android:layout_marginBottom="@dimen/dimen_34"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="新增消息模块，有什么问题可以直接私信客服啦"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_28" />

        <ImageView

            android:id="@+id/iv"
            android:layout_width="@dimen/dimen_11"
            android:layout_height="@dimen/dimen_22"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_23"
            android:layout_marginTop="@dimen/dimen_62"
            android:background="@drawable/go_go" />
    </RelativeLayout>


</RelativeLayout>