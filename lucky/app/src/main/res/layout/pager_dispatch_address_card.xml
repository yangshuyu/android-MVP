<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F6">

    <RelativeLayout
        android:id="@+id/rl_phonenum"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_24"
            android:gravity="center_vertical"
            android:text="@string/phonenum."
            android:textColor="#666666" />

        <EditText
            android:id="@+id/et_dispatch_phonenum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_phonenum"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="number"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_30" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2"
        android:layout_below="@+id/rl_phonenum"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginRight="@dimen/dimen_24"
        android:background="@color/bg_view" />"

    <RelativeLayout
        android:id="@+id/rl_operator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80"
        android:layout_below="@+id/view"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_operator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_24"
            android:gravity="center_vertical"
            android:text="@string/operator."
            android:textColor="#666666" />

        <EditText
            android:id="@+id/et_dispatch_operator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_operator"
            android:background="@null"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#333333"
            android:textSize="@dimen/dimen_30" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_envelope"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_12"
        android:layout_below="@+id/rl_operator"
        android:background="@drawable/dispatch_envelope" />

    <RelativeLayout
        android:layout_below="@+id/iv_envelope"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="@dimen/dimen_18"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18"
        android:layout_below="@+id/iv_envelope"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_dispatch_card_submit"
            android:layout_width="@dimen/dimen_125"
            android:layout_height="@dimen/dimen_60"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_24"
            android:background="@drawable/shape_red_radius"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_6"
            android:paddingEnd="@dimen/dimen_8"
            android:paddingStart="@dimen/dimen_8"
            android:paddingTop="@dimen/dimen_6"
            android:text="@string/Submit"
            android:textColor="#ffffff"
            android:textSize="@dimen/dimen_28" />
    </RelativeLayout>


</RelativeLayout>