<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_dispatch_fcshare"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_36"
        android:layout_marginBottom="@dimen/dimen_40"
        android:gravity="center_horizontal"
        android:text="@string/SendtoFacebook"
        android:textColor="#cccccc"
        android:textSize="@dimen/dimen_28" />

    <TextView
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/tv_dispatch_isfcshare"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_60"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_dispatch_fcshare"
        android:layout_marginRight="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_5"
        android:background="@drawable/shape_fcblue"
        android:paddingEnd="@dimen/dimen_35"
        android:paddingStart="@dimen/dimen_35"
        android:text="@string/Send"
        android:textColor="#ffffff"
        android:textSize="@dimen/dimen_30" />
</RelativeLayout>