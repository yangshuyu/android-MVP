<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="bottom">
        <shape>
            <size android:height="5dp"></size>
            <padding android:bottom="5dp"></padding>
            <gradient
                android:angle="-90"
                android:endColor="#0f000000"
                android:startColor="@android:color/transparent"></gradient>
        </shape>
    </item>

    <item android:gravity="center">
        <shape android:shape="rectangle">
            <padding android:bottom="1dp"></padding>
            <size android:height="1dp"></size>
            <solid android:color="#bbb"></solid>
        </shape>

    </item>
</layer-list>